AddHandler cgi-script .rb
Options +ExecCGI
Options -Indexes

DirectoryIndex index.rb

Options +FollowSymlinks
RewriteEngine on

# Pour ne pas rediriger les images, fichiers css, fonts, etc.
RewriteCond %{REQUEST_FILENAME} !.+\.(css|js|png|jpg|pdf|ico|ttf|woff|woff2)$

# Pour éviter le contenu dupliqué
RewriteCond %{SERVER_PORT} 80
RewriteRule ^(.*)$ https://www.atelier-icare.net/$1 [R=301]

# Pour ne pas rediriger l'appel au script ajax
RewriteCond %{REQUEST_FILENAME} !.+ajax\.rb$

#RewriteCond %{REMOTE_ADDR} 2a01:cb1c:98:2e00:890:fc7d:2811:3506
RewriteCond %{REMOTE_ADDR} ^2a01:cb1c:98:2e00:.+$
#RewriteRule ^(.*)$ index.rb?route_init=$1 [QSA,L]
RewriteRule ^(.*)$ pouressai.html [QSA,L]

RewriteRule ^(.*)$ index.html [QSA,L]
#RewriteRule ^(.*)$ index.rb?route_init=$1 [QSA,L]

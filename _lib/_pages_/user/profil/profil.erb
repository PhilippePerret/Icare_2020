<div class="state-list medium left">
  <%= StateList.button_modify('user/profil/edit',{title:'Modifier les données du profil'}) %>
  <% [
    ['Pseudo', pseudo],
    ['Mail', TAG_MAILTO % {mail:data[:mail], pseudo:data[:mail]}],
    ['Inscription', formate_date(data[:created_at])],
    ['Mot de passe', ('<a href="user/change_password">'+UI_TEXTS[:btn_lien_change_password]+'</a>').freeze],
    ['Module courant', module_courant_name],
    ['Session', session.id],
    ['Préférences', Tag.lien(route:'bureau/preferences'.freeze, text:'régler les préférences'.freeze)]
  ].each do |pair| %>
    <%= StateList.row(pair.first, pair.last) %>
  <% end %>
</div>
<div class="buttons mt4">
  <a href="user/destroy" class="btn warning discret"><%= UI_TEXTS[:btn_detruire_profil] %></a>
</div>

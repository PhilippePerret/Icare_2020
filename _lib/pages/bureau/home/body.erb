  <%= EMO_TRAVAIL+ISPACE+Tag.link(route:'bureau/travail'.freeze, text:'Travail courant'.freeze) %>
</div>
<div id="goto-notifications" class="goto">
  <%= EMO_PUNAISE+ISPACE+Tag.link(route:'bureau/notifications'.freeze,text:('Notifications%{non_vus}' % {non_vus: pastille_notifications_non_vues}).freeze) %>
